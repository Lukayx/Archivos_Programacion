{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe compilar archivo activo",
      "command": "C:\\TDM-GCC-32\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++17",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "-lbgi",
        "-lgdi32",
        "-lcomdlg32",
        "-luuid",
        "-loleaut32",
        "-lole32"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compilador: C:\\TDM-GCC-32\\bin\\g++.exe"
    }
  ]
}